[module/bspwm]
type = internal/bspwm
enable-scroll = false
;Workspace icons
ws-icon-0 = I;
ws-icon-1 = II;
ws-icon-2 = III;
ws-icon-3 = IV;
ws-icon-4 = V;
ws-icon-default = 
label-separator = 

label-empty = %icon%
label-empty-padding = 2
label-empty-foreground = #ff6a6aD5

label-occupied =%icon%
label-occupied-padding = 1
label-occupied-underline = ${colors.white2}

label-focused =%icon%
label-focused-foreground = ${colors.dullblue}
label-focused-padding = 1
label-focused-underline = ${colors.dullblue}

label-urgent =%icon%!
label-urgent-background = ${colors.mred}
label-urgent-padding = 1

[module/cpu]
type = internal/cpu
format = <label>
format-underline = ${colors.white}
label =  %percentage%%

[module/memory]
type = internal/memory
format = <label>
format-underline = ${colors.white}
label =  %percentage_used%%
 
[module/weather]
type = custom/script
exec = $HOME/.config/polybar/scripts/openweathermap-simple.sh
