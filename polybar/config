[module/date]
type = internal/date
internal = 1.0
date =   %d.%m.%Y% 
time =  %H:%M%
format = <label>
label = %date%  %time%
date-alt = %d.%b.%Y%
time-alt = %H:%M:%S%

[module/battery]
